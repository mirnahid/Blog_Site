}

@model Blog.Article
<style>
    #yazi {
        font-family: 'Times New Roman';
    }
</style>
@section head{

    <script src="~/Content/style/js/jquery.min.js"></script>
    <script>
        $(document).ready(function myfunction() {
            function view(id) {
                var link = "/Article/Views" + id;
                $.ajax({
                    type: "GET",
                    url: link,
                    success: function myfunction() {

                    }
                });
            }
        });
    </script>
