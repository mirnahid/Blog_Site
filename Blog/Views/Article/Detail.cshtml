<div class="divide100"></div>
<a id="comment"></a>
<div id="comments">
    <h3 id="yazi">@Model.Comments.Count Rəy</h3>
    <ol id="singlecomments" class="commentlist">
        @foreach (Blog.Comment comment in Model.Comments)
        {
            <li>
                <div class="comment-wrapper">
                    <div class="user"><img alt="" src="~/Content/Image/default.png" class="avatar" /></div>
                    <div class="message">
                        <div class="arrow-box">
                            <div class="info">
                                <h2 id="yazi"><a href="#">Connor Gibson</a>@comment.NameSurname</h2>
                                <div class="meta"> <span class="date">@comment.UploadDate.ToShortDateString()</span> </div>
                            </div>
                            <p id="yazi">@comment.Comment1</p>
                        </div>
                    </div>
                </div>
            </li>
        }


    </ol>
</div>
<!-- /#comments -->
<div class="divide100"></div>
<div class="comment-form-wrapper">
    <h3 id="yazi">Düşüncələrini Paylaşmaq İstərsən?</h3>
    <p id="yazi">Email adresiniz yayımlanmayacaq.lazımlı yerlər işarətlənmişdir *</p>
    <form class="comment-form" name="form_name" action="/Article/CommentWrite/@Model.ArticleId" method="post">
        <div class="name-field">
            <label><i class="icon-user"></i></label>
            <input type="text" name="namesurname" placeholder="Ad Soyad*" />
        </div>
        <div class="email-field">
            <label><i class="icon-mail-alt"></i></label>
            <input type="text" name="email" placeholder="Email*" />
        </div>
        <div class="website-field">
            <label><i class="icon-globe"></i></label>
            <input type="text" name="website" placeholder="Web Sayt" />
        </div>
        <div class="message-field">
            <textarea name="Comment" id="textarea yazi" rows="5" cols="30" placeholder="Rəyiniz..."></textarea>
        </div>
        <input id="yazi" type="submit" value="Əlavə Et" name="submit" class="btn btn-submit" />
    </form>
</div>




