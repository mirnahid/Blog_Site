<div class="blog-posts classic-blog single">

    <div class="post format-image">
        <div class="meta">
            <span class="date">@Model.UploadDate</span>
            <span class="categories"><a href="/Category/Index/@Model.CategoryID">@Model.Category.Name</a></span>
            <span class="comments"><a href="#comment">@Model.Comments.Count<i class="icon-chat-1"></i></a></span>
        </div>
        <h1 class="post-title" id="yazi">@Model.Title</h1>
        <figure class="main">
            <img src="@Model.Imagee.Big" alt="" />
        </figure>
        <div class="post-content">
            <p id="yazi">@Model.Content</p>
            <div class="meta tags">
                @foreach (Blog.Tag tag in Model.Tags)
                {
                    <a href="/Tag/Index/@tag.TagId" id="yazi">@tag.Name</a>
                }
            </div>
            <div class="click-share">
                <ul>
                    <li><a class="btn share-facebook" href="#" id="yazi">Bəyən</a></li>
                    <li><a class="btn share-twitter" href="#">Tweet</a></li>
                    <li><a class="btn share-pinterest" href="#" id="yazi">Pinterest də Paylaş</a></li>
                </ul>
            </div>
            <!-- /.share-links -->

        </div>
    </div>
    <!-- /.post -->

</div>
