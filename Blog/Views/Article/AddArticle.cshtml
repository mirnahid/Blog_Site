
@{
    ViewBag.Title = "Yeni Məqalə";
}
@model IEnumerable<Blog.Category>
<form action="/Article/AddArticle" method="post" enctype="multipart/form-data">
    <table>
        <tr>
            <td>Başlıq:</td>
            <td><input type="text" name="Title" value="" />
            </td>
        </tr>
        <tr>
            <td>Məqalə:</td>
            <td><input type="text" name="Content" value="" /></td>
        </tr>
        <tr>
            <td>Kategoriya:</td>
            <td>
                <select name="CategoryID">
                    @foreach (Blog.Category cat in ViewBag.Category)
                    {
                        <option value="@cat.CategoryId">@cat.Name</option>
                    }
                </select>
            </td>
            
        </tr>
        <tr>
            <td>Şəkil</td>
            <td>
                <input type="file" name="image" value="" />
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="name" value="Daxil Et" /></td>
        </tr>
    </table>
</form>

